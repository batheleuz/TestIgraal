{% extends 'base.html.twig' %}

{% block body %}
    <div class="w3-container w3-teal">
        <h1>Test iGraal</h1>
    </div>
    <div class="w3-container w3-border w3-padding-large" style="margin: 20px 20% ;">
        <div>
            <p id="label_user"><b><label> <i class="fa fa-fw fa-user"></i> User</label></b></p>
            <select type="text"  class="w3-border w3-input" id="select_user">
                <option>-- Select a user --</option>
            </select>
        </div>
        <hr/>
        <div>
            <table class="w3-table-all w3-hoverable" >
                <thead>
                    <tr>
                        <th> <i class="fa fa-user"></i> user</th>
                        <th>Marchant</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th> <i class="fa fa-euro"></i> CashBack</th>
                    </tr>
                </thead>
               <tbody id="commission_tbody">
                    <tr><td class="w3-center" colspan="5">Be sure to select a user.</td></tr>
               </tbody>
            </table>
        </div>
    </div>
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/w3css.css') }}" />
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function(){
            $.ajax({
                method: "GET",
                url: "{{ web_service_address }}/users",
                dataType: "json" ,
                beforeSend: function (){
                    $("#label_user").append("<i class='fa fa-fw fa-refresh fa-spin'></i>");
                }
            }).done( function( data ) {
                var html="";
                   $.each( data , function(key ,value){
                       html += "<option value='"+value.id+"'> "+ value.name +" </option>";
                   });
                 $("#select_user").append(html);
                 $(".fa-refresh").remove();
            }).fail(function() {
                console.log( "Server Error" );
            });
            $("select#select_user").change( function () {
               var id_user =  this.value ;
                $("#label_user").append("<i class='fa fa-fw fa-refresh fa-spin'></i>");
                $("#commission_tbody").html();
                $.getJSON(
                    "{{ web_service_address }}/commissions/"+id_user ,
                    function( commissions ) {
                        var html="";
                        $.each( commissions , function(key ,value){
                            html += "<tr> "+
                                    "<td>"+ value.user +"</td>" +
                                    "<td>"+ value.marchant +"</td>" +
                                    "<td>"+ value.date +"</td>" +
                                    "<td>"+ value.heure +"</td>" +
                                    "<td>"+ value.cashback + " â‚¬ </td>" +
                                +" </tr>";
                        });

                        $("#commission_tbody").html(html);
                        $(".fa-refresh").remove();
                    }
                ).fail(function() {
                    console.log( "Server Error" );
                })
            })
        });
    </script>
{% endblock %}